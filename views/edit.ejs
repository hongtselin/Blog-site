<% include ./partials/top %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form class ="ui form clearfix" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>"></input>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>"></input>
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui right floated button" type="submit">Submit</button>
    </form>
</div>

<% include ./partials/bottom %>